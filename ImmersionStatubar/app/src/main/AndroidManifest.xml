<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tingting.immersion.statusbar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_vimeo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_vimeo"
        android:supportsRtl="true"
        >

        <activity android:name=".MainActivity"
            android:theme="@style/Theme.ImmersionStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activitys.ImmersionImageActivity"
            android:theme="@style/TranslucentTheme">
        </activity>

        <activity
            android:name=".activitys.ImmersionBarActivity"
            android:theme="@style/TranslucentTheme"
            android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>
<!--            android:theme="@style/NoActionBarTheme"-->

        <activity
            android:name=".activitys.ImmersionNavActivity"
            android:theme="@style/TranslucentTheme">
        </activity>
        <activity
            android:name=".activitys.ImmersionActionBarActivity"
            android:theme="@style/AppThemeActionBar">
        </activity>
        
        
    </application>

</manifest>